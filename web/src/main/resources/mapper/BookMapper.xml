<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wy.dao.BookDao" >
    <resultMap id="bookMap" type="book">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="author" property="author"/>
        <result column="publisher" property="publisher"/>
        <result column="price" property="price"/>
        <result column="image" property="image"/>
        <result column="tag" property="tag"/>
    </resultMap>
    <sql id="tb">
        book
    </sql>
    <sql id="cols_all">
        id,name,author,publisher,price,image,tag
    </sql>
    <sql id="dynamic_condition">
        <if test="id != null">AND id = #{id}</if>
        <if test="name != null">AND name = #{name}</if>
        <if test="author != null">AND author = #{author}</if>
        <if test="publisher != null">AND publisher = #{publisher}</if>
        <if test="price != null">AND price = #{price}</if>
        <if test="image != null">AND image = #{image}</if>
        <if test="tag != null">AND tag = #{tag}</if>
    </sql>
    <select id="queryAll" parameterType="map" resultMap="bookMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE 1 = 1
        <include refid="dynamic_condition"/>
    </select>
    <select id="getById" parameterType="string" resultMap="bookMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </select>
</mapper>